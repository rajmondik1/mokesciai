{% extends 'sistema.html.twig' %}

{% block title %}Vanduo index{% endblock %}



{% block content %}
                <canvas class="my-4 w-100" id="myChart" width="900" height="380"></canvas>

                <div class="table-responsive">
                    <table class="table table-striped table-sm">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Header</th>
                            <th>Header</th>
                            <th>Header</th>
                            <th>Header</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for vanduo in vanduos %}
                            <tr>
                                <td>{{ vanduo.date ? vanduo.date|date('Y-m') : '' }}</td>
                                <td>{{ vanduo.iki }}</td>
                                <td>{{ vanduo.nuo }}</td>
                                <td>{{ vanduo.tarifas }}</td>
                                <td>
                                    <a href="{{ path('vanduo_show', {'id': vanduo.id}) }}">show</a>
                                    <a href="{{ path('vanduo_edit', {'id': vanduo.id}) }}">edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td> no records found</td>
                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                </div>

{% endblock %}

{% block javascripts %}

    <!-- Graphs -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.min.js"></script>
    <script>
        var ctx = document.getElementById("myChart");
        var myChart = new Chart(ctx, {
            type: 'line',
            data: {
                //labels: ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"],
                labels: [
                    {% for vanduo in vanduos %}
                    "{{ vanduo.date ? vanduo.date|date('Y-m') : '' }}",
                    {% endfor %}
                ],
                datasets: [{
                    //data: [15339, 21345, 18483, 24003, 23489, 24092, 12034],
                    data: [
                        {% for vanduo in vanduos %}
                        {{ vanduo.iki - vanduo.nuo }},
                        {% endfor %}
                    ],
                    lineTension: 0,
                    backgroundColor: 'transparent',
                    borderColor: '#007bff',
                    borderWidth: 4,
                    pointBackgroundColor: '#007bff'
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: false
                        }
                    }]
                },
                legend: {
                    display: false,
                }
            }
        });
    </script>
{% endblock %}